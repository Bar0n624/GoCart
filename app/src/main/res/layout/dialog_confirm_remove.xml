<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:backgroundTint="@color/cpWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/confirm_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Remove From Wishlist"
        android:textSize="30sp"
        android:gravity="center"
        android:fontFamily="@font/lato"
        android:textColor="@color/primary"
        />

    <TextView
        android:id="@+id/confirm_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Are you sure you want to remove this item from your wishlist?"
        android:textSize="16sp"
        android:fontFamily="@font/lato"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/positive"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_dialog_text"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@android:color/transparent"
        android:text="Yes"
        android:textAllCaps="false"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:textColor="@color/icon"
        />

    <Button
        android:id="@+id/negative"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/confirm_dialog_text"
        app:layout_constraintEnd_toStartOf="@id/positive"
        android:background="@android:color/transparent"
        android:text="No"
        android:textAllCaps="false"
        android:fontFamily="@font/lato"
        android:textSize="18sp"
        android:textColor="@color/icon"
        android:elevation="0dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>